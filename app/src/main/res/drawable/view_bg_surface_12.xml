<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- margin bottom +2 -->
	<!-- Drop Shadow Stack -->
	
	<item>
		<shape>
			<padding android:top="1dp"
				android:right="1dp"
				android:bottom="1dp"
				android:left="1dp" />
			<solid android:color="@color/surface1dpElevation1" />
			<corners android:radius="12dp" />
		</shape>
	</item>
	<item>
		<shape>
			<padding android:bottom="0.5dp" />
			<solid android:color="@color/surface1dpElevation2" />
			<corners android:radius="12dp" />
		</shape>
	</item>
	
	<!-- Background -->
	<item>
		<shape>
			<solid android:color="@color/surface1dpImitation" />
			<corners android:radius="12dp" />
		</shape>
	</item>
</layer-list>