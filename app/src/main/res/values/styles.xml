		<item name="android:insetLeft">0dp</item>
		<item name="android:insetRight">0dp</item>
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:paddingLeft">4dp</item>
		<item name="android:paddingRight">4dp</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
	
	</style>
	
	<style name="My.Widget.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
		<item name="materialThemeOverlay">@style/My.Checkbox.Overlay</item>
	</style>
	
	<style name="My.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
		
		<item name="shapeAppearanceOverlay">@style/My.ShapeAppearanceOverlay.Rounded.12dp</item>
	
	</style>
	
