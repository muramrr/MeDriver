<resources>
	<style name="My.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
		<item name="shapeAppearanceOverlay">@style/My.ShapeAppearanceOverlay.BottomSheet</item>
	</style>

	<style name="My.Widget.TextView" parent="@style/Widget.MaterialComponents.TextView">
		<item name="android:textAppearance">@style/My.TA.Body1</item>
	</style>

	<style name="BaseSwitcher">
		<item name="switcher_off_color">#d62828</item>
		<item name="switcher_on_color">#1FF678</item>
		<item name="switcher_disabled_icon_color">@color/disabled_foreground</item>
		<item name="switcher_disabled_background_color">@color/disabled_background</item>
		<item name="switcher_width">50dp</item>
		<item name="switcher_height">30dp</item>
		<item name="elevation">2dp</item>
	</style>

	<style name="Switcher" parent="BaseSwitcher"/>

	<style name="BaseProgress">
		<item name="barBackgroundColor">#4D434141</item>
		<item name="barForegroundColor">?colorSecondary</item>
		<item name="android:textColor">?attr/colorOnBackground</item>

	</style>

	<style name="CircularProgress" parent="BaseProgress"/>
	
	<style name="LoadingView">
		<item name="loadStrokeColor">@android:color/white</item>
		<item name="loadStrokeWidth">4dp</item>
	</style>
	
	<!-- button with icon at center -->
	<style name="My.Widget.Button.IconOnly.Text" parent="Widget.MaterialComponents.Button.TextButton.Icon">
		
		<item name="iconPadding">0dp</item>
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
	
	</style>
	
	<!-- button with icon at center -->
	<style name="My.Widget.Button.IconOnly.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
		
		<item name="iconPadding">0dp</item>
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
	
	</style>
	
